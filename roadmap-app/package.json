{
  "name": "roadmap-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "11.1.0",
    "@testing-library/user-event": "12.1.10",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "redux-saga": "1.1.3",
    "web-vitals": "0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm lint:eslint && npm lint:prettier",
    "lint:eslint": "eslint --fix --ext .tsx,.ts src/",
    "lint:stylelint": "stylelint --fix 'src/**/**/*.scss'",
    "lint:prettier": "prettier --write src/**/**/*.{ts,tsx,json,scss}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --fix",
    "src/**/*.scss": "stylelint --fix",
    "src/**/*.{ts,tsx,json,scss}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "7.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-redux-saga": "1.2.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "13.8.0",
    "stylelint-config-htmlacademy": "0.1.4",
    "stylelint-config-rational-order": "0.1.2"
  }
}
